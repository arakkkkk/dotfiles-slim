{
    //// General settings
    // Editor
    "workbench.statusBar.visible": true,
    "editor.renderWhitespace": "all",
    "diffEditor.ignoreTrimWhitespace": false,
    "emmet.variables": {},
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "C_Cpp.intelliSenseEngine": "Disabled",
    "terminal.integrated.defaultProfile.osx": "fish",
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "explorer.confirmDelete": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "explorer.confirmDragAndDrop": false,
    "security.workspace.trust.untrustedFiles": "open",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    // Shell
    "terminal.integrated.fontFamily": "Source Code Pro for Powerline",




    // Formatter
    "[python]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.rulers": [120],
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.rulers": [120],
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "npm.packageManager": "yarn",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "prettier.tabWidth": 4,
    "tabnine.experimentalAutoImports": true,
    // Linter
    "eslint.packageManager": "yarn",
    "eslint.format.enable": false,
    "python.autoComplete.extraPaths": [
        "~/.pyenv/versions/3.7.0/lib/python3.7/site-packages"
    ],
    "python.analysis.extraPaths": [
        "~/.pyenv/versions/3.7.0/lib/python3.7/site-packages"
    ],





    //// Extensions
    // vim
    // カーソル移動をNERDTreeと同じかんじに
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.highlightedyank.enable": true,                      //yankした箇所をハイライト表示にする
    "vim.highlightedyank.duration":700,                      //yankした時の色の表示時間
    "vim.visualstar"            : true,                      //カーソル上にあるワードを"*"で検索
    "workbench.list.keyboardNavigation": "simple",

    // vscode workspace
    "vscodeWorkspaceSwitcher.paths": [
        "~/dotfiles/dotfiles/vscode/vscode-workspace"
    ],
    "vscodeWorkspaceSwitcher.showTreeView": false,


    // Vim key mappings
    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-e>"],
            "after": ["<Esc>", "$", "a"]
        },
        {
            "before": ["<C-a>"],
            "after": ["<Esc>", "^", "i"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["<C-j>"],
            "after": ["5", "j"]
        },
        {
            "before": ["<C-k>"],
            "after": ["5", "k"]
        },
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["Enter"],
            "after": ["o", "Esc"]
        },
        {
            "before": ["<C-h>"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<C-l>"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["<C-j>"],
            "after": ["5", "j"]
        },
        {
            "before": ["<C-k>"],
            "after": ["5", "k"]
        },
        {
            "before": ["t", "a"],
            "commands": ["workbench.action.files.newUntitledFile"]
        },
        {
            "before": ["f", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["f", "w"],
            "commands": ["workbench.action.switchWindow"]
        },
        {
            "before" : ["u"],
            "commands" : ["undo"]
        },
        {
            "before" : ["<C-r>"],
            "commands" : ["redo"]
        },
    ],
    // タブ
    "workbench.editor.wrapTabs": true,
    "workbench.editor.tabSizing": "shrink",

    // サイズ
    "debug.console.fontSize": 13,
    "terminal.integrated.fontSize": 13,
    "editor.fontSize": 12,
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
}

